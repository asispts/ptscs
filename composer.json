{
    "name": "asispts/ptscs",
    "description": "PSR-12 coding standard with additional strict rules",
    "type": "phpcodesniffer-standard",
    "license": "MIT",
    "authors": [
        {
            "name": "Asis Pattisahusiwa",
            "email": "asis.pattisahusiwa@gmail.com"
        }
    ],
    "keywords": [
        "phpcs",
        "PSR-12",
        "coding-style",
        "coding-standard",
        "phpcs-standard"
    ],
    "homepage": "https://github.com/asispts/ptscs",
    "support": {
        "issues": "https://github.com/asispts/ptscs/issues"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ptscs\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "slevomat/coding-standard": "^8.8",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^8.5.14|^9.5|^10.0"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        }
    }
}
